{{#if posts.length}}
<section>
    <h2>Your Tech Posts</h2>
    <ol>
        {{#each posts as |post|}}
        <ul>
            <article class="post">
                <div class="title">
                    <a href="/post/{{id}}">{{title}}</a>
                </div>
            </article>
            <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
        </ul>
        {{/each}}
    </ol>
</section>
{{/if}}

<div>
    <button type="submit"><a href="/dashboard/newpost" class="create-btn">Create a new Post</a></button>
</div>