{{#if loggedIn}}
<section>
  <h2>Create a New Post!</h2>
  <form class="new-post-form">
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" size="40" name="post-title" />
    </div>
    <div>
      <label for="post-text">Post Content</label>
      <textarea name="post-text"></textarea>
    </div>
    <button type="submit" class="btn">Create Post!</button>
  </form>
</section>
{{else}}
<p>Please log in to create a new post.</p>
{{/if}}

<script src="/javascript/add-post.js"></script>
